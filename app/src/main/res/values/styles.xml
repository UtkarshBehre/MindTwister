<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appColor500</item>
        <item name="colorPrimaryDark">@color/appColor700</item>
        <item name="colorAccent">@color/appAccent400</item>
        <item name="android:fontFamily">casual</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!-- Instructions text style -->
    <style name="creditsStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="creditsStyle.creditsRoles">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="creditsStyle.creditsNames">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="mysize1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">casual</item>
    </style>

    <style name="mysize1.mysize11">
        <item name="android:textSize">30sp</item>
    </style>

    <!-- Header Text Theme -->
    <style name="HeaderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <!--button theme for main menu -->
    <style name="ButtonTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@mipmap/button_img</item>
    </style>

    <!--button theme for rainbow matrix game-->
    <style name="buttonsize">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>

    </style>

    <style name="buttonsize.buttonsizenormal">
        <item name="android:background">@color/rainbow_default</item>
    </style>

    <style name="buttonsize.buttonsizebig">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:background">@color/whiteColor</item>
    </style>

    <!--Buttons theme for Memory matrix game -->
    <style name="TileTheme33">

        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@color/memory_matrixs_tile_default_color</item>
    </style>


    <style name="TileTheme34">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@color/memory_matrixs_tile_default_color</item>
    </style>

    <style name="TileTheme44">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@color/memory_matrixs_tile_default_color</item>
    </style>


    <style name="TileTheme45">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/memory_matrixs_tile_default_color</item>
    </style>

    <style name="TileTheme55">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@color/memory_matrixs_tile_default_color</item>
    </style>

    <style name="TileTheme56">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/memory_matrixs_tile_default_color</item>
    </style>

    <style name="TileTheme66">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/memory_matrixs_tile_default_color</item>
    </style>

</resources>
