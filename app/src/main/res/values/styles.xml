<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appColor500</item>
        <item name="colorPrimaryDark">@color/appColor700</item>
        <item name="colorAccent">@color/appAccent400</item>
