<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/memory_matrix_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mindtwister.mindtwister.activity_memory_matrixs_33">


    <TextView
        android:id="@+id/tiles_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/tiles"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/appAccent400" />

    <TextView
        android:id="@+id/tiles_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tiles_View"
        android:layout_toEndOf="@+id/tiles_View"
        android:text="@string/_3x3"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/whiteColor" />

    <TextView
        android:id="@+id/level_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tiles_text"
        android:layout_alignParentEnd="true"
        android:text="@string/level1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/whiteColor" />

    <TextView
        android:id="@+id/level_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/level_text"
        android:layout_toStartOf="@+id/level_text"
        android:text="@string/level"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/appAccent400" />


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:background="@color/appColor800"
        android:columnCount="3"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:rowCount="3">

        <Button

            android:id="@+id/tiles_11_btn"
            style="@style/TileTheme33"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/tiles_12_btn"
            style="@style/TileTheme33"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/tiles_13_btn"
            style="@style/TileTheme33"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/tiles_21_btn"
            style="@style/TileTheme33"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/tiles_22_btn"
            style="@style/TileTheme33"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/tiles_23_btn"
            style="@style/TileTheme33"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/tiles_31_btn"
            style="@style/TileTheme33"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/tiles_32_btn"
            style="@style/TileTheme33"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/tiles_33_btn"
            style="@style/TileTheme33"
            android:layout_margin="8dp" />
    </GridLayout>
</RelativeLayout>
