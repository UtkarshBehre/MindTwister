<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/about_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mindtwister.mindtwister.GameOverActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="50dp"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:text="Game Over"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/whiteColor"
        android:textSize="50sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/appAccent700">

        <TextView
            android:id="@+id/yourScoreIs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:layout_marginBottom="52dp"
            android:fontFamily="casual"
            android:text="Your Score is"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/scoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yourScoreIs"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:fontFamily="casual"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/whiteColor"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scoreText"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="30dp"
            android:fontFamily="casual"
            android:text="Thank You"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="25sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/playButton"
            style="@style/ButtonTheme"
            android:layout_width="100dp"
            android:layout_below="@+id/relativeLayout2"
            android:layout_margin="5dp"
            android:onClick="newGameOnClick"
            android:text="New Game"
            android:textSize="16sp" />

        <Button
            android:id="@+id/playButton1"
            style="@style/ButtonTheme"
            android:layout_width="100dp"
            android:layout_below="@+id/relativeLayout2"
            android:layout_margin="5dp"
            android:onClick="mainMenuOnClick"
            android:text="Main Menu"
            android:textSize="16sp" />

        <Button
            android:id="@+id/playButton2"
            style="@style/ButtonTheme"
            android:layout_width="100dp"
            android:layout_below="@+id/relativeLayout2"
            android:layout_margin="5dp"
            android:text="Scores"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>
