<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/memory_matrix_background"
    tools:context=".memorymatrix.MemoryMatrix33Activity">

    <FrameLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/level_view"
                style="@style/HeaderText"
                android:text="@string/difficulty"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/appAccent400" />

            <TextView
                android:id="@+id/difficultyText"
                style="@style/HeaderText"
                android:layout_marginRight="20dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/whiteColor" />

            <TextView
                android:id="@+id/text_view"
                style="@style/HeaderText"
                android:text="@string/level"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/appAccent400" />

            <TextView
                android:id="@+id/matrixText"
                style="@style/HeaderText"
                android:layout_marginRight="30dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/whiteColor" />

            <TextView
                android:id="@+id/trials_view"
                style="@style/HeaderText"
                android:text="@string/trials"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/appAccent400" />

            <TextView
                android:id="@+id/trialsText"
                style="@style/HeaderText"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/whiteColor" />


        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/helperText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:text=""
        android:textColor="@color/whiteColor"
        android:textSize="20sp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@color/appColor800"
        android:columnCount="3"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:rowCount="3">

        <Button
            android:id="@+id/tiles_11_btn"
            style="@style/TileTheme33"
            android:layout_margin="8dp"
            android:onClick="b1OnClick" />

        <Button
            android:id="@+id/tiles_12_btn"
            style="@style/TileTheme33"
            android:layout_margin="8dp"
            android:onClick="b2OnClick" />

        <Button
            android:id="@+id/tiles_13_btn"
            style="@style/TileTheme33"
            android:layout_margin="8dp"
            android:onClick="b3OnClick" />

        <Button
            android:id="@+id/tiles_21_btn"
            style="@style/TileTheme33"
            android:layout_margin="8dp"
            android:onClick="b4OnClick" />

        <Button
            android:id="@+id/tiles_22_btn"
            style="@style/TileTheme33"
            android:layout_margin="8dp"
            android:onClick="b5OnClick" />

        <Button
            android:id="@+id/tiles_23_btn"
            style="@style/TileTheme33"
            android:layout_margin="8dp"
            android:onClick="b6OnClick" />

        <Button
            android:id="@+id/tiles_31_btn"
            style="@style/TileTheme33"
            android:layout_margin="8dp"
            android:onClick="b7OnClick" />

        <Button
            android:id="@+id/tiles_32_btn"
            style="@style/TileTheme33"
            android:layout_margin="8dp"
            android:onClick="b8OnClick" />

        <Button
            android:id="@+id/tiles_33_btn"
            style="@style/TileTheme33"
            android:layout_margin="8dp"
            android:onClick="b9OnClick" />
    </GridLayout>
</RelativeLayout>
