<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/credits_backgrounds"
    tools:context=".sudoku.Sudoku_instructionActivity">

    <TextView
        android:id="@+id/creditsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:text="@string/game_rules"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/whiteColor"
        android:textSize="50sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/creditsView">

        <TextView
            android:id="@+id/rule1"
            style="@style/creditsStyle.creditsRoles"
            android:layout_below="@id/creditsView"
            android:text="@string/sudoku_rule" />
    </ScrollView>
</RelativeLayout>
